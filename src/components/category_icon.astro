---
const { name, class: cls = "w-5 h-5" } = Astro.props as { name: string; class?: string };
---

<!-- 简易线性 SVG 图标，使用 currentColor 继承文本颜色 -->
{name === "code" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <path d="M9 7L4 12l5 5" />
    <path d="M15 7l5 5-5 5" />
  </svg>
) : name === "palette" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <path d="M12 21a8 8 0 1 1 0-16 6 6 0 0 1 6 6c0 1.657-1.343 3-3 3h-2a1 1 0 0 0-1 1v2" />
    <circle cx="7.5" cy="10" r="1" />
    <circle cx="10.5" cy="7.5" r="1" />
    <circle cx="15.5" cy="8.5" r="1" />
    <circle cx="16" cy="12" r="1" />
  </svg>
) : name === "home" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <path d="M3 10.5L12 3l9 7.5V21H3z" />
    <path d="M9 21v-6h6v6" />
  </svg>
) : name === "plane" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <path d="M3 11l18-8-8 18-2-7-8-3z" />
  </svg>
) : name === "book" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <path d="M4 5h10a4 4 0 0 1 4 4v10H8a4 4 0 0 0-4-4V5z" />
    <path d="M8 19V9a4 4 0 0 1 4-4" />
  </svg>
) : name === "camera" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <rect x="3" y="6" width="18" height="14" rx="2" ry="2" />
    <circle cx="12" cy="13" r="3.5" />
    <path d="M8 6l2-2h4l2 2" />
  </svg>
) : name === "timeline" ? (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round" class={cls} aria-hidden="true">
    <path d="M4 4v16" />
    <circle cx="8" cy="6" r="1.5" />
    <circle cx="12" cy="12" r="1.5" />
    <circle cx="16" cy="18" r="1.5" />
  </svg>
) : (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7" class={cls} aria-hidden="true">
    <circle cx="12" cy="12" r="5" />
  </svg>
)}