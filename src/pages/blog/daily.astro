---
import StickyNav from "../../components/sticky_nav.astro";
import ArticleRenderer from "../../components/article/ArticleRenderer.astro";
import { dailyArticles } from "../../data/daily_articles";
---

<!doctype html>
<html lang="zh-CN" data-theme="black">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daily Fragments</title>
    <meta name="description" content="Daily life fragments and photography" />
    <link
      rel="preload"
      href="/fonts/MaoKenZhuYuanTi.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <style>
      @font-face {
        font-family: "MaokenZhuyuanTi";
        src: url(/fonts/MaoKenZhuYuanTi.ttf);
        font-display: swap;
      }
      body {
        font-family: "MaokenZhuyuanTi", sans-serif;
        background-color: #0f0f11;
        color: #e5e7eb;
      }
      
      .hero-image {
        animation: scale-in 10s ease-out forwards;
      }
      @keyframes scale-in {
        0% { transform: scale(1.1); }
        100% { transform: scale(1.0); }
      }

      .hide-scrollbar::-webkit-scrollbar {
        display: none;
      }
      .hide-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
    </style>
  </head>
  <body class="antialiased min-h-screen">
    <StickyNav showImmediately={true} />

    <!-- 注入文章数据供客户端脚本使用 -->
    <script id="daily-articles-data" type="application/json" set:html={JSON.stringify(dailyArticles)}></script>

    <!-- 客户端渲染容器 -->
    <div id="article-container" class="opacity-0 transition-opacity duration-500">
        <!-- 内容将由 JavaScript 动态插入 -->
    </div>

    <!-- 客户端脚本 -->
    <script>
      import type { ArticleData } from "../../types/article";

      // 定义简单的渲染函数（由于无法在客户端直接复用 .astro 组件，我们需要用 JS 重建 HTML 结构）
      // 或者更简单的做法：我们把 ArticleRenderer 的逻辑用纯 JS 实现一遍，或者使用 Web Components
      // 为了快速实现且不重复造轮子，这里我们采用一个折中方案：
      // 我们依然在服务端渲染一个"空壳"，但通过 client:only 或纯 JS 来填充内容。
      // 鉴于 Astro 组件无法在客户端运行，我们必须用 JS 手写 DOM 生成逻辑，或者使用 React/Vue 组件。
      
      // 更好的方案：使用 React 组件来渲染内容，因为 React 组件可以在客户端运行。
      // 但这里我们没有配置 React 集成。所以我们用原生 JS 实现一个简易渲染器。

      function renderArticle(data: ArticleData) {
        document.title = `${data.title} | Daily Fragments`;
        
        // 渲染 Hero Section
        const heroHtml = `
            <header class="relative h-[85vh] w-full overflow-hidden">
              <div class="absolute inset-0 bg-black/30 z-10"></div>
              <div class="absolute inset-0 bg-gradient-to-t from-[#0f0f11] via-transparent to-transparent z-20"></div>
              <img src="${data.cover}" alt="Cover" class="absolute inset-0 w-full h-full object-cover hero-image" />
              <div class="absolute bottom-0 left-0 w-full z-30 px-6 pb-20 md:pb-24 max-w-5xl mx-auto md:px-12">
                <div class="flex flex-col gap-4 animate-fade-up">
                  <div class="flex items-center gap-3 text-emerald-400 font-mono text-sm tracking-wider uppercase">
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                      ${data.date}
                    </span>
                    <span class="w-1 h-1 bg-emerald-400 rounded-full"></span>
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                      ${data.location || ''}
                    </span>
                  </div>
                  <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white leading-tight drop-shadow-lg">${data.title}</h1>
                  <p class="text-xl md:text-2xl text-gray-300 font-light italic">${data.subtitle || ''}</p>
                  <div class="mt-6 flex flex-wrap gap-4 text-sm text-gray-400 border-t border-white/10 pt-6 max-w-xl">
                    ${data.weather ? `<div class="flex items-center gap-2"><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" /></svg>${data.weather}</div>` : ''}
                    ${data.camera ? `<div class="flex items-center gap-2"><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" /></svg>${data.camera}</div>` : ''}
                  </div>
                </div>
              </div>
            </header>
        `;

        // 渲染正文 Blocks
        const blocksHtml = data.content.map(block => {
            switch(block.type) {
                case 'heading':
                    const level = block.level || 2;
                    const sizeClass = {
                        1: 'text-3xl md:text-4xl mt-12 mb-6',
                        2: 'text-2xl md:text-3xl mt-10 mb-5',
                        3: 'text-xl md:text-2xl mt-8 mb-4',
                        4: 'text-lg md:text-xl mt-6 mb-3'
                    }[level] || 'text-xl';
                    return `<h${level} class="font-bold text-white ${sizeClass}">${block.content}</h${level}>`;
                case 'text':
                    return `<div class="prose-text text-gray-300 text-lg md:text-xl my-8 md:my-10 leading-relaxed tracking-wide ${block.align === 'center' ? 'text-center' : ''} ${block.align === 'right' ? 'text-right' : ''}">${block.content}</div>`;
                case 'image':
                    if (block.layout === 'portrait') {
                        return `
                            <figure class="my-16 md:my-24 flex flex-col items-center">
                                <div class="relative max-w-md w-full p-2 md:p-4 bg-white/5 border border-white/5 rounded-2xl shadow-2xl rotate-1 hover:rotate-0 transition-transform duration-500 group">
                                    <img src="${block.src}" alt="${block.caption || ''}" loading="lazy" class="w-full h-auto rounded-xl" />
                                    ${block.exif ? `<div class="absolute bottom-6 right-6 text-[10px] font-mono text-white/80 bg-black/40 backdrop-blur-sm px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300">${block.exif}</div>` : ''}
                                </div>
                                ${block.caption ? `<figcaption class="mt-6 text-sm text-gray-500 italic">— ${block.caption}</figcaption>` : ''}
                            </figure>`;
                    }
                    return `
                        <figure class="my-16 md:my-24 group relative ${block.layout === 'bleed' ? '-mx-5 md:-mx-20' : ''}">
                            <div class="overflow-hidden ${block.layout === 'bleed' ? 'rounded-none md:rounded-2xl' : 'rounded-xl'} shadow-2xl">
                                <img src="${block.src}" alt="${block.caption || ''}" loading="lazy" class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-[1.02]" />
                            </div>
                            <div class="mt-4 flex flex-col md:flex-row md:items-center justify-between gap-2 ${block.layout === 'bleed' ? 'px-5 md:px-0' : ''}">
                                ${block.caption ? `<figcaption class="text-sm text-gray-400 italic border-l-2 border-emerald-500 pl-3">${block.caption}</figcaption>` : ''}
                                ${block.exif ? `<div class="text-xs font-mono text-gray-500 bg-white/5 px-3 py-1 rounded-full border border-white/5 w-fit">${block.exif}</div>` : ''}
                            </div>
                        </figure>`;
                case 'gallery':
                     const gridCols = block.layout === 'grid-3' ? 'md:grid-cols-3' : 'md:grid-cols-2';
                     return `
                        <div class="my-16 md:my-24">
                            <div class="grid grid-cols-1 ${gridCols} gap-4 md:gap-8">
                                ${block.images.map((img, idx) => `
                                    <div class="relative group overflow-hidden rounded-2xl shadow-lg ${block.layout === 'grid-2' && idx % 2 === 1 ? 'md:mt-12' : block.layout === 'grid-2' && idx % 2 === 0 ? 'md:mb-12' : ''}">
                                        <img src="${img.src}" loading="lazy" class="w-full h-80 md:h-[500px] object-cover transition-transform duration-700 group-hover:scale-105" />
                                        ${img.exif ? `<div class="absolute inset-x-0 bottom-0 p-4 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex justify-end"><span class="text-[10px] font-mono text-white/90 border border-white/20 px-2 py-0.5 rounded-md bg-black/30 backdrop-blur-md">${img.exif}</span></div>` : ''}
                                    </div>
                                `).join('')}
                            </div>
                            ${block.caption ? `<div class="text-center mt-8 text-sm text-gray-500 italic">${block.caption}</div>` : ''}
                        </div>`;
                case 'quote':
                    return `
                        <blockquote class="my-12 pl-6 border-l-4 border-emerald-500/50 italic text-xl md:text-2xl text-gray-400 font-serif leading-relaxed">
                            "${block.content}"
                            ${block.author ? `<footer class="mt-2 text-base text-emerald-500/80 not-italic font-sans">— ${block.author}</footer>` : ''}
                        </blockquote>`;
                case 'divider':
                    return '<div class="my-16 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>';
                default:
                    return '';
            }
        }).join('');

        const contentHtml = `
            <main class="relative z-20 pb-20">
                <div class="article-content max-w-4xl mx-auto px-5 md:px-8">
                    ${blocksHtml}
                </div>
                <!-- 底部 -->
                <div class="max-w-4xl mx-auto px-5 md:px-8">
                    <div class="mt-32 mb-20 pt-10 border-t border-white/10 text-center">
                    <div class="inline-flex items-center gap-2 text-emerald-400 mb-4">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span class="text-xl font-bold">Thanks for reading</span>
                    </div>
                    <p class="text-gray-500 text-sm">
                        本篇内容发布于 ${data.date} · ${data.location || ''}
                    </p>
                    <div class="mt-8">
                        <a href="/fragmentlist" class="btn btn-outline border-white/20 text-gray-300 hover:bg-white/10 hover:border-emerald-500 hover:text-emerald-400 rounded-full px-8">
                        返回列表
                        </a>
                    </div>
                    </div>
                </div>
            </main>
        `;

        const container = document.getElementById('article-container');
        if (container) {
            container.innerHTML = heroHtml + contentHtml;
            container.classList.remove('opacity-0');
        }
      }

      // 初始化逻辑
      document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const id = urlParams.get('id');
        
        if (!id) {
            window.location.href = '/fragmentlist';
            return;
        }

        try {
            const dataScript = document.getElementById('daily-articles-data');
            if (dataScript && dataScript.textContent) {
                const articles = JSON.parse(dataScript.textContent);
                const article = articles.find((a: any) => a.id === id);
                
                if (article) {
                    renderArticle(article);
                } else {
                    console.error('Article not found');
                    window.location.href = '/fragmentlist';
                }
            }
        } catch (e) {
            console.error('Failed to load article data', e);
        }
      });
    </script>
  </body>
</html>